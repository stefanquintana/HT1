	private class MiListener implements ActionListener{

		public void actionPerformed(ActionEvent e) {
			if(metodos.isEstado() == true) {
				if(guardar == true) {
					String mensaje = metodos.guardar(botonActual);
					System.out.println(mensaje);
					guardar = false;
					double[] lista = metodos.getEmisoras();
					for(double elemento : lista) {
						System.out.println(elemento);
					}
				}
				else {
					String mensaje = metodos.seleccionar(botonActual);
					System.out.println(mensaje);
					if(metodos.isRadio() == true) {
						lblNewLabel.setText("Radio Actual: AM");
						lblNewLabel_1.setText("Emisora Actual: " + metodos.getEmisoraAM());
					}
					else {
						lblNewLabel.setText("Radio Actual: FM");
						lblNewLabel_1.setText("Emisora Actual: " + metodos.getEmisoraFM());
					}
				}
			}
			else {
				JOptionPane.showMessageDialog(null, "Favor encender la radio");
			}
		}	
	}
	
	private class MiListenerAvanzar implements ActionListener{
		@Override
		public void actionPerformed(ActionEvent e) {
			// TODO Auto-generated method stub
			if(metodos.isEstado() == true) {
				double actual = metodos.avanzar();
				lblNewLabel_1.setText("Emisora Actual: " + actual);
			}
			else {
				JOptionPane.showMessageDialog(null, "Favor encender la radio");
			}
		}
	}
	
	private class MiListenerGuardar implements ActionListener{
		@Override
		public void actionPerformed(ActionEvent e) {
			// TODO Auto-generated method stub
			if(metodos.isEstado() == true) {
				guardar = true;
			}
			else {
				JOptionPane.showMessageDialog(null, "Favor encender la radio");
			}
		}	
	}
	
	private class MiListenerCambiar implements ActionListener{
		@Override
		public void actionPerformed(ActionEvent e) {
			// TODO Auto-generated method stub
			if(metodos.isEstado() == true) {
				boolean Radio = metodos.amFm();
				metodos.setRadio(Radio);
				if(metodos.isRadio() == true) {
					lblNewLabel.setText("Radio Actual: AM");
					lblNewLabel_1.setText("Emisora Actual: " + metodos.getEmisoraAM());
				}
				else {
					lblNewLabel.setText("Radio Actual: FM");
					lblNewLabel_1.setText("Emisora Actual: " + metodos.getEmisoraFM());
				}
			}
			else {
				JOptionPane.showMessageDialog(null, "Favor encender la radio");
			}
		}
	}
	
	private class MiListenerEncender implements ActionListener{
		@Override
		public void actionPerformed(ActionEvent e) {
			// TODO Auto-generated method stub
			boolean nuevoEstado = metodos.encenderApagar();
			metodos.setEstado(nuevoEstado);
		}
		
	}
}

